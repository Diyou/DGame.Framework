{
  "version": 5,
  "configurePresets": [
    {
      "name": "Default.Clang",
      "environment": {
        "CC": "clang",
        "CXX": "clang++"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "Default.Clang",
      "environment": {
        "CC": "clang-cl",
        "CXX": "clang-cl"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "Debug.Clang",
      "displayName": "Debug Clang",
      "description": "Configuration with Clang",
      "inherits": ["Debug", "Default.Clang"]
    },
    {
      "name": "Release.Clang",
      "displayName": "Release Clang",
      "description": "Configuration with Clang",
      "inherits": ["Release", "Default.Clang"]
    }
  ],
  "buildPresets": [
    {
      "name": "Debug.Clang",
      "displayName": "Debug",
      "inherits": ["Debug"],
      "configurePreset": "Debug.Clang"
    },
    {
      "name": "Release.Clang",
      "displayName": "Release",
      "inherits": ["Release"],
      "configurePreset": "Release.Clang"
    }
  ]
}
