{
  "version": 5,
  "configurePresets": [
    {
      "name": "multilib",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_FLAGS": "-m32",
        "CMAKE_CXX_FLAGS": "-m32"
      }
    },
    {
      "name": "WASM",
      "hidden": true,
      "cacheVariables": {
        "BUILD_WASM": true
      }
    },
    {
      "name": "Default",
      "hidden": true
    },
    {
      "name": "Debug",
      "inherits": ["Default"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "displayName": "Debug",
      "description": "Configuration with default Toolchain + Ninja",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/Debug"
    },
    {
      "name": "Release",
      "inherits": ["Default"],
      "cacheVariables": {
        "BUILD_SHARED_LIBS": "OFF",
        "CMAKE_BUILD_TYPE": "Release"
      },
      "displayName": "Release",
      "description": "Configuration with default Toolchain + Ninja",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/Release"
    },
    {
      "name": "Debug.WASM",
      "inherits": ["Debug", "WASM"],
      "displayName": "Debug.WASM",
      "description": "Configuration with Emscripten Toolchain",
      "binaryDir": "${sourceDir}/build/Debug.WASM"
    },
    {
      "name": "Release.WASM",
      "inherits": ["Release", "WASM"],
      "displayName": "Release.WASM",
      "description": "Configuration with Emscripten Toolchain",
      "binaryDir": "${sourceDir}/build/Release.WASM"
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "hidden": true,
      "targets": ["DGame.Framework", "HelloTriangle"]
    },
    {
      "name": "Debug",
      "inherits": ["default"],
      "configurePreset": "Debug"
    },
    {
      "name": "Release",
      "inherits": ["default"],
      "configurePreset": "Release"
    },
    {
      "name": "Debug.WASM",
      "displayName": "Debug",
      "inherits": ["default"],
      "configurePreset": "Debug.WASM"
    },
    {
      "name": "Release.WASM",
      "displayName": "Release",
      "inherits": ["default"],
      "configurePreset": "Release.WASM"
    }
  ]
}
